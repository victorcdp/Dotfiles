#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

source sb-status2d

case $BLOCK_BUTTON in
	1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer -i 1 ;;
	5) pamixer -d 1 ;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && printf "%s%s%s" "$s2d_color4" "[ïª€ ]" "$s2d_reset" && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ï©½"
elif [ "$vol" -lt "30" ]; then
	icon="ï©¾"
else
	icon="ï©¿"
fi

printf "%s%s %s%%%s" "$s2d_color4" "[$icon" "$vol" "]$s2d_reset" && exit 0
