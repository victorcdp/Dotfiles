#!/bin/sh
# This script takes all the current directory's cbz files, extracts them, renames the files to incremental numbers, rezips them to .cbz and moves the .cbz to the current directory

for file in *.cbz ; do (unzip "${file}" -d "${file%%.cbz}"); done ;
for dir in ./*/ ; do (cd "$dir" && incrementalrename jpg && zipfolder cbz); done
